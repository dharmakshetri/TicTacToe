<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PlayerText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">200px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">20px</item>
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">300px</item>
        <item name="android:onClick">btnClick</item>
    </style>

</resources>
